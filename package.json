{
  "name": "@sergeimeza/uikit-next",
  "version": "1.2.2",
  "private": false,
  "description": "Personal react components library",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/esm/index.d.ts",
  "repository": "https://github.com/SergeiMeza/uikit-next.git",
  "author": "SergeiMeza <sergeimeza@gmail.com>",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:clean": "rimraf lib",
    "build:css": "postcss styles/index.css -o components/styles.css",
    "build:copy-css": "cp components/styles.css lib/esm/styles.css && cp components/styles.css lib/cjs/styles.css",
    "build:esm": "tsc --project tsconfig.compile.json",
    "build:cjs": "tsc --project tsconfig.compile.json --module commonjs --outDir lib/cjs",
    "compile": "yarn build:clean && yarn build:esm && yarn build:cjs",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@sergeimeza/foundation-react": "^1.2.0",
    "@tailwindcss/typography": "^0.5.0",
    "react-syntax-highlighter": "^15.4.5"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@hookform/resolvers": "^2.8.0",
    "next": "12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.15.3",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@hookform/resolvers": "^2.8.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-syntax-highlighter": "^13.5.2",
    "autoprefixer": "^10.4.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "next": "12.0.7",
    "postcss": "^8.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.21.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.0",
    "typescript": "4.5.2",
    "yup": "^0.32.9"
  },
  "files": [
    "lib",
    "components"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
